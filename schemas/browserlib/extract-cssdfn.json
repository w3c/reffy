{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/w3c/reffy/blob/main/schemas/browserlib/extract-cssdfn.json",

  "type": "object",
  "additionalProperties": false,
  "required": ["properties", "atrules", "selectors", "values"],
  "properties": {
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name"],
        "properties": {
          "name": { "$ref": "../common.json#/$defs/cssPropertyName" },
          "href": { "$ref": "../common.json#/$defs/url" },
          "value": { "$ref": "../common.json#/$defs/cssValue" },
          "newValues": { "$ref": "../common.json#/$defs/cssValue" },
          "values": { "$ref": "../common.json#/$defs/cssValues" },
          "styleDeclaration": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },

    "atrules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "descriptors"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "pattern": "^@" },
          "href": { "$ref": "../common.json#/$defs/url" },
          "value": { "$ref": "../common.json#/$defs/cssValue" },
          "prose": { "type": "string" },
          "descriptors": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "for"],
              "additionalProperties": true,
              "properties": {
                "name": { "type": "string" },
                "for": { "type": "string" },
                "href": { "$ref": "../common.json#/$defs/url" },
                "value": { "$ref": "../common.json#/$defs/cssValue" },
                "values": { "$ref": "../common.json#/$defs/cssValues" }
              }
            }
          },
          "values": { "$ref": "../common.json#/$defs/cssValues" }
        }
      }
    },

    "selectors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
          "name": { "$ref": "../common.json#/$defs/cssPropertyName" },
          "href": { "$ref": "../common.json#/$defs/url" },
          "prose": { "type": "string" },
          "value": { "$ref": "../common.json#/$defs/cssValue" },
          "values": { "$ref": "../common.json#/$defs/cssValues" }
        }
      }
    },

    "values": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "pattern": "^<[^>]+>$|^.*()$" },
          "href": { "$ref": "../common.json#/$defs/url" },
          "type": { "type": "string", "enum": ["type", "function"] },
          "prose": { "type": "string" },
          "value": { "$ref": "../common.json#/$defs/cssValue" },
          "values": { "$ref": "../common.json#/$defs/cssValues" }
        }
      }
    },

    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["msg", "name"],
        "properties": {
          "msg": { "type": "string" },
          "name": { "type": "string" }
        }
      },
      "minItems": 1
    }
  }
}
