{
  "$schema": "http://json-schema.org/schema#",
  "definitions": {
    "typedterminal": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["primitive", "valuespace", "propertyref", "keyword" ] },
        "name": { "type": "string"},
        "optional": { "type": "boolean" },
        "range": { "type": "array", "items": {"type": "string"} }
      },
      "additionalProperties": false,
      "required": ["type", "name"]
    },
    "stringterminal": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "pattern": "^string$" },
        "content": {"type": "string"}
      },
      "additionalProperties": false,
      "required": ["type", "content"]
    },
    "oneOf": {
      "type": "object",
      "properties": {
        "oneOf": {
          "type": "array",
          "items": { "$ref": "#/definitions/component"}
        },
        "nonempty": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": ["oneOf"]
    },
    "anyOf": {
      "type": "object",
      "properties": {
        "anyOf": {
          "type": "array",
          "items": { "$ref": "#/definitions/component"}
        },
        "nonempty": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": ["anyOf"]
        },
    "allOf": {
      "type": "object",
      "properties": {
        "allOf": {
          "type": "array",
          "items": { "$ref": "#/definitions/component"}
        },
        "nonempty": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": ["allOf"]
    },
    "sequence": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "pattern": "^array$"},
        "items": {
          "oneOf": [
            {
              "type": "array",
              "items": { "$ref": "#/definitions/component"}
            },
            { "$ref": "#/definitions/component"}
          ]
        },
        "minItems": { "type": "number" },
        "maxItems": { "type": "number" }
      },
      "additionalProperties": false,
      "required": ["type", "items"]
    },
    "function": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "pattern": "^function$"},
        "arguments": {
          "oneOf": [
            {
              "type": "array",
              "items": { "$ref": "#/definitions/component"}
            },
            { "$ref": "#/definitions/component"}
          ]
        }
      },
      "additionalProperties": false,
      "required": ["type", "arguments"]
    },
    "component": {
      "oneOf": [
        { "$ref": "#/definitions/typedterminal" },
        { "$ref": "#/definitions/stringterminal" },
        { "$ref": "#/definitions/oneOf" },
        { "$ref": "#/definitions/anyOf" },
        { "$ref": "#/definitions/allOf" },
        { "$ref": "#/definitions/sequence" },
        { "$ref": "#/definitions/function" }
      ]
    }
  },
  "$ref": "#/definitions/component"
}
